. ~/.zsh/aliases

# changing directory to code project
function c { cd ~/Sites/$1; }

# alternative to "rails" command to use templates
function railsapp {
  template=$1
  appname=$2
  shift 2
  rails $appname -m http://github.com/ryanb/rails-templates/raw/master/$template.rb $@
}

# misc
alias reload='. ~/.bash_profile'

# Gemdoc
function gemdoc {
  open $GEMDIR/doc/`$(which ls) $GEMDIR/doc | grep $1 | sort | tail -1`/rdoc/index.html
}

# move files to mac trash can
trash () { mv -iv $@ ~/.Trash/ ; }

# rails
# rtest () { ruby -I"lib:test" $@ ; }

# count files of certain pattern
cnt () { ls $@ | wc -l; }

# open files found by ack in mvim
vack () { mvim -f $(ack -l $@); }

# search: remind yourself of an alias (given some part of it)
sbash () { grep $@ ~/.bash_profile ; }

