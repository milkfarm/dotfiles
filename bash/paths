export PATH="~/bin:~/.localbin:~/.bin:~/.sbin:/usr/local/bin:/usr/local/sbin:~/.rvm/bin:/usr/local/opt/node@14/bin:$PATH"
export MANPATH="/usr/local/man:/usr/local/mysql/man:/usr/local/git/man:$MANPATH"

# Mac Lion Xcode 4.2 compiler issue
# -> Place in .localrc instead (if needed)
#export CC=gcc-4.2

# Gemdoc
export GEMDIR=`gem env gemdir`

# Python PATH for Python
# The orginal version is saved in .bash_profile.pysave
PATH="/Library/Frameworks/Python.framework/Versions/2.7/bin:${PATH}"
export PATH

# Set MacVim as the default editor
export EDITOR="mvim -f"

# Register the ONIX DTD in the system XML Catalog
export XML_CATALOG_FILES="/usr/local/etc/xml/catalog/onix/catalog.xml $XML_CATALOG_FILES"

# Set flags for compilers to find node@14
export LDFLAGS="-L/usr/local/opt/node@14/lib"
export CPPFLAGS="-I/usr/local/opt/node@14/include"
