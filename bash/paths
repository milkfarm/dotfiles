# PATH
PATH="/usr/local/opt/node@16/bin:$PATH"
#PATH="~/.rvm/bin:$PATH"
PATH="~/bin:~/.localbin:~/.bin:~/.sbin:/usr/local/bin:/usr/local/sbin:$PATH"
PATH="/Library/Frameworks/Python.framework/Versions/2.7/bin:$PATH"
export PATH

# MANPATH
export MANPATH="/usr/local/man:/usr/local/git/man:$MANPATH"

# Mac Lion Xcode 4.2 compiler issue
# -> Place in .localrc instead (if needed)
#export CC=gcc-4.2

# Gemdoc
export GEMDIR=`gem env gemdir`

# Set MacVim as the default editor
export EDITOR="mvim -f"

# Register the ONIX DTD in the system XML Catalog
export XML_CATALOG_FILES="/usr/local/etc/xml/catalog/onix/catalog.xml $XML_CATALOG_FILES"

# Set flags for compilers to find node
export LDFLAGS="-L/usr/local/opt/node@16/lib"
export CPPFLAGS="-I/usr/local/opt/node@16/include"
