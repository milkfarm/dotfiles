" Colors
colorscheme railscasts2
highlight ColorColumn ctermbg=235 guibg=#252525
highlight Search guibg=#447788 guifg=#66eeff

" Tabs
set guitablabel=%N:%M%t

if has("gui_macvim")
  " Override MacVim commands for creating tab
  macmenu &File.New\ Tab key=<D-t>
  macmenu &File.Open\ Tab\.\.\. key=<nop>

  " Map command-T to fzf
  map <C-S-t> :Files<CR>
  imap <C-S-t> <Esc>:Files<CR>
  map <C-S-h> :History<CR>
  imap <C-S-h> <Esc>:History<CR>
  map <C-S-b> :Buffers<CR>
  imap <C-S-b> <Esc>:Buffers<CR>
endif
